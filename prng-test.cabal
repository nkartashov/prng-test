-- Initial prng-test.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                prng-test
version:             0.1.0.0
synopsis:            Little project to for running tests on Haskell PRNGs using HTestU
description:         
  This project is a basic example of how to use PRNGBench to test PRMGs.
  Prng-test includes a runner of SmallCrush for a number of PRNGs as well as
  a runners for splitmix and pcg-random.
homepage:            https://github.com/nkartashov/prng-test
license:             MIT
license-file:        LICENSE
author:              Nikita Kartashov
maintainer:          snailandmail@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

source-repository head
    type:     git
    location: git://github.com/nkartashov/prng-test

executable prng-test
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8,
                       random,
                       htestu >=0.1 && <0.2,
                       pcg-random >=0.2 && <0.3,
                       splitmix,
                       tf-random
  hs-source-dirs:      src
  default-language:    Haskell2010

executable pcg-big-crush
  main-is:             PCGFastPureBigCrush.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8,
                       htestu >=0.1 && <0.2,
                       pcg-random >=0.2 && <0.3
  hs-source-dirs:      src
  default-language:    Haskell2010

executable splitmix-big-crush
  main-is:             SplitMixBigCrush.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8,
                       htestu >=0.1 && <0.2,
                       splitmix
  hs-source-dirs:      src
  default-language:    Haskell2010

